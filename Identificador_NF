import re
from pathlib import Path
import os
import xlsxwriter
import wave

#codigo que busca o diretorio
directory_name = input('Coloque aqui o caminho da arquivo: ')
for file_name in os.listdir(directory_name):
    with open(os.path.join(directory_name, file_name), 'r') as f:
        text = f.readline()
        #print(linha)
        
#codigo de busca do padr√£o CNPJ do arquivo
r = re.compile(r'\d{2}\.\d{3}\.\d{3}\/\d{4}\-\d{2}')
mo = r.findall(text)
print(mo)

#salvar em excel os cnpjs encontrados
