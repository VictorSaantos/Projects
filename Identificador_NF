import re
import pathlib
import os

#codigo que busca o diretorio
pasta = input('Coloque aqui o caminho da arquivo: ')
for DANFE in os.walk(pasta , onerror=None , followlinks=True):
    lista_arquivos = DANFE
#transformar a tupla numa lista com caminho dos arquivos
list(lista_arquivos)
print(lista_arquivos[2])
